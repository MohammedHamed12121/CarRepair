<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRepair.Pages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRepair.Pages.styles.css" asp-append-version="true" />


    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;600;800&family=Roboto:wght@400;500;700&display=swap"
        rel="stylesheet">


    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        p {
            color: #823315;
            font: 1em sans-serif;
        }
    </style>
</head>

<body>
    <header>
        <nav>
            <a class="btn btn-primary" asp-area="" asp-page="/Users/SentAppointments">User</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Receptionist/DisplayAppointments">Receptionist</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Mechanic/Cars">Mechanic</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Employers/AcceptedAcknowledgement">Accepted
                Acknowledge</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Recieve/Recieve">Reciever</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Employers/EmployerWorkspace">Employer workspace</a>
            <partial name="_LoginPartial" />
        </nav>


    </header>
    <div>
        <h1>hello @User.Identity!.Name</h1>
    </div>
    <nav>
        <a class="btn btn-primary" asp-area="" asp-page="/Mechanic/AssignedRepairs">Assigned</a>
        <a class="btn btn-primary" asp-area="" asp-page="/Mechanic/NotAssignedRepairs">Not Assigned</a>
    </nav>

    @* <div class="container"> *@
    <main role="main">
        @RenderBody()
    </main>
    @* </div> *@

    @* <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2024 - CarRepair.Pages - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
    </footer> *@


    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>