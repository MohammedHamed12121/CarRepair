<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRepair.Pages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRepair.Pages.styles.css" asp-append-version="true" />


    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;600;800&family=Roboto:wght@400;500;700&display=swap"
        rel="stylesheet">


    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        p {
            color: #823315;
            font: 1em sans-serif;
        }
    </style>
</head>

<body>
    <header>
        <nav>
            <a class="btn btn-primary" asp-area="" asp-page="/Users/SentAppointments">User</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Receptionist/DisplayAppointments">Receptionist</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Mechanic/NotAssignedRepairs">Mechanic</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Manager/MechanicInfos">Manager</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Recieve/Recieve">Reciever</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Employers/EmployerWorkspace">Employer workspace</a>

        </nav>


    </header>
    <div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div>
                        Welcome
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>




        <div class="row">

            <div class="col-2">

                <!-- partial:./partials/_sidebar.html -->
                <nav class="sidebar">
                    <ul class="nav">
                        <li class="nav-item sidebar-category">
                            <p>Appointment</p>
                            <span></span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Users/SentAppointments">
                                <i class="mdi mdi-view-headline menu-icon"></i>
                                <span class="menu-title">Sent</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Users/SeenAppointments">
                                <i class="mdi mdi-chart-pie menu-icon"></i>
                                <span class="menu-title">To You</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Users/AcceptedAppointments">
                                <i class="mdi mdi-grid-large menu-icon"></i>
                                <span class="menu-title">Accepted</span>
                            </a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Users/RejectedAppointments">
                                <i class="mdi mdi-emoticon menu-icon"></i>
                                <span class="menu-title">Rejected</span>
                            </a>
                        </li>
                        <li class="nav-item sidebar-category">
                            <p>New</p>
                            <span></span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Users/MakeAppointment">
                                <span class="menu-title">Make appointment</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- partial -->
            </div>
            <div class="col-9">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>


        @* <div class="container"> *@

        @* </div> *@

        @* <footer class="border-top footer text-muted">
        <div class="container">
        &copy; 2024 - CarRepair.Pages - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
        </footer> *@


        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>


        @await RenderSectionAsync("Scripts", required: false)
</body>

</html>