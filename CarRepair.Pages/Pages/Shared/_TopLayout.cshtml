<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRepair.Pages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRepair.Pages.styles.css" asp-append-version="true" />


    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;600;800&family=Roboto:wght@400;500;700&display=swap"
        rel="stylesheet">


    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        p {
            color: #823315;
            font: 1em sans-serif;
        }
    </style>
</head>

<body>
    <header>
        <nav>
            <a class="btn btn-primary" asp-area="" asp-page="/Users/SentAppointments">User</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Receptionist/DisplayAppointments">Receptionist</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Mechanic/NotAssignedRepairs">Mechanic</a>
            <a class="btn btn-primary" asp-area="" asp-page="/Manager/MechanicInfos">Manager</a>
        </nav>


    </header>
    @RenderBody()


</body>

</html>