@page
@model CarRepair.Pages.Pages.Manager.Repairs
@using CarRepair.Pages.Models
@{
    ViewData["Title"] = "Repairs";
    Layout = "_ManagerLayout";
}

<h1>@ViewData["Title"]</h1>

<div>
    
    <table class="table table-sm table-striped table-bordered">
        <thead>

            <tr>
                <th>Id</th>
                <th>Visit Time</th>
                <th>Issue</th>
                <th>RepairStatus</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var repair in Model.NotStartedRepairs)
            {
                <tr>
                    <td>@repair.Id</td>
                    <td>@repair.VisitDate </td>
                    <td>@repair.Issue.Description</td>
                    <td>@repair.CarStatus </td>
                    <td>
                        @if(repair.CarStatus == Status.Recieved)
                        {
                            <button>assign</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>