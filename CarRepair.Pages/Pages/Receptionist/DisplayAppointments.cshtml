<div class="table-responsive pt-3">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <div>
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="container">

                    <div class="row height d-flex justify-content-center align-items-center">

                        <div class="col-md-8">

                            <div class="search">
                                <i class="fa fa-search"></i>
                                <input type="text" class="form-control" placeholder="Search By Id">
                                @* <button class="btn btn-primary">Search</button> *@
                            </div>

                        </div>

                    </div>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
    <table class="table table-striped project-orders-table">
        <thead>
            <tr>
                <th class="ml-5">ID</th>
                <th>Visit Time</th>
                <th>User Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in @Model.Repairs)
            {
                <tr>
                    <td>@appointment.Id</td>
                    <td>@appointment.VisitDate </td>
                    <td>@appointment.User.UserName</td>
                    @* <td>@appointment.Issue.Description</td> *@
                    <td>
                        @* TODO: show the the Issue on a model popup *@
                        <button class="btn btn-primary" data-toggle="modal" data-target="#IssueModel-@appointment.Id">Show
                            Issue</button>
                    </td>
                </tr>



                <!-- Bootstrap Modal -->
                <div class="modal fade" id="IssueModel-@appointment.Id" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="card-body">
                                    <div class="row">

                                        <h4 class="card-title col-10">Issue <small>@appointment.User</small></h4>
                                        <button type="button" class="close col-2 btn btn-primary" data-dismiss="modal"
                                            aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <p class="card-description">
                                        <small>@appointment.VisitDate</small>
                                    </p>
                                    <p>
                                        @appointment.Issue!.Description
                                    </p>
                                </div>


                            </div>
                            <div class="modal-footer">

                                <a asp-area="" asp-page="SendConfirm" asp-route-appointmentId="@appointment.Id"
                                    class="btn btn-primary">Accept</a>
                                <a asp-area="" asp-page="SendRejection" asp-route-appointmentId="@appointment.Id"
                                    class="btn btn-primary">Reject</a>
                            </div>
                        </div>
                    </div>

                </div>
            }

        </tbody>
    </table>
</div>
