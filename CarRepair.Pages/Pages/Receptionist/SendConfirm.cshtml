@page
@model CarRepair.Pages.Pages.Admin.SendConfirm
@{
    ViewData["Title"] = "SendConfirm";
    Layout="_ReceptionistLayout";
}


<div>
    <h1>@Model.Repair.Id</h1>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <div>
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="container">

                    <div class="row height d-flex justify-content-center align-items-center">

                        <div class="col-md-8">

                            <div class="search">
                                <i class="fa fa-search"></i>
                                <input type="text" class="form-control" placeholder="Search By Id">
                                @* <button class="btn btn-primary">Search</button> *@
                            </div>

                        </div>

                    </div>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
    <form method="post">
        <input type="hidden" name="Repair.Id" value="@Model.Repair.Id">
        <input type="hidden" name="Repair.VisitDate" value="@Model.Repair.VisitDate">
        <input type="hidden" name="Repair.UserId" value="@Model.Repair.UserId">
        <input type="hidden" name="Repair.IssueId" value="@Model.Repair.IssueId">

        
        <label for=""> user visit date @Model.Repair.VisitDate</label>
        <input type="text" placeholder="Price" name="Repair.Price">
        <input type="text" placeholder="Notes" name="Repair.WorkerNote">
        <label for=""> user expires confirm date</label>
        <input type="date" name="Repair.AcceptDate">
        <button type="submit">submit</button>
    </form>
</div>