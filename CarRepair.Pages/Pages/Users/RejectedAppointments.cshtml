@page
@model CarRepair.Pages.Pages.Users.RejectedAppointments
@{
    ViewData["Title"] = "RejectedAppointments";
    Layout = "_UserLayout";
}

<h1>@ViewData["Title"]</h1>


<div class="card-body">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Visit Time</th>
                    <th>Issue</th>
                    <th>RepairStatus</th>
                    <th>note</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                </tr>
                @* unaccepted repair called appointment *@
                @foreach (var appointment in Model.Repairs)
                {
                    <tr>
                        <td>@appointment.Id</td>
                        <td>@appointment.VisitDate </td>
                        <td>@appointment.Issue.Description</td>
                        <td>@appointment.AppointmentStatus </td>
                        <td>@appointment.WorkerNote </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>