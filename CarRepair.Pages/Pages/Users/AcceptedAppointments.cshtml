@page
@model CarRepair.Pages.Pages.Users.AcceptedAppointments
@{
    ViewData["Title"] = "AcceptedAppointments";
    Layout="_UserLayout";
}

<h1>@ViewData["Title"]</h1>

<div>


    <table class="table table-sm table-striped table-bordered">
        <thead>

            <tr>
                <th>Id</th>
                <th>Visit Time</th>
                <th>Issue</th>
                <th>RepairStatus</th>
            </tr>
        </thead>
        <tbody>
            @* the unaccepted repair called appointment *@
            @foreach (var appointment in Model.Repairs)
            {
                <tr>
                    <td>@appointment.Id</td>
                    <td>@appointment.VisitDate </td>
                    <td>@appointment.Issue.Description</td>
                    <td>@appointment.CarStatus </td>
                </tr>
            }

        </tbody>
    </table>
</div>