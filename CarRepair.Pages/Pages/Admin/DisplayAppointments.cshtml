@page
@model CarRepair.Pages.Pages.Appointments.DisplayAppointments
@{
    ViewData["Title"] = "DisplayAppointments";
}

<h1>@ViewData["Title"]</h1>

<div>
        <table class="table table-sm table-striped table-bordered">
            <thead>

                <tr>
                    <th>Id</th>
                    <th>Visit Time</th>
                    <th>Issue</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in @Model.appointments)
                {
                <tr>
                    <td>@appointment.Id</td>
                    <td>@appointment.VisitTime </td>
                    @* <td>@appointment.Issue.Description</td> *@
                    <td>
                        <button class="btn btn-primary">Show Issue</button>
                    </td>
                </tr>
                }

            </tbody>
        </table>

</div>