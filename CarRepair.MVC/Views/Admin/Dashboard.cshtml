@model int
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<!-- Bootstrap CSS -->
@* <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> *@
<!-- Feather Icons -->
@* <link href="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.css" rel="stylesheet"> *@



<!-- Page Content -->
    <h3>Welcome to Vehicle Service Management System</h3>
    <div class="row">
        <div class="col-md-3">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">Total Category</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="font-weight-bold">4</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">Mechanics</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="font-weight-bold">@Model</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">Services</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="font-weight-bold">10</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-secondary text-white mb-4">
                <div class="card-body">Finished Requests</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="font-weight-bold">0</span>
                </div>
            </div>
        </div>
    </div>

